{
  "private": true,
  "name": "canvas-kit-react",
  "devDependencies": {
    "@storybook/react": "^3.3.11",
    "@types/node": "^8.0.58",
    "@types/react": "^16.0.29",
    "@types/react-dom": "^16.0.3",
    "@workday/canvas-kit-build": "^2.5.0",
    "babel-core": "^6.26.0",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.1.0",
    "file-loader": "^1.1.5",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^6.0.0",
    "node-fetch": "^1.7.3",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.10.2",
    "raw-loader": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-svg": "^2.1.22",
    "sass-loader": "^6.0.6",
    "storybook-readme": "^3.0.6",
    "style-loader": "^0.19.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {},
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook",
    "bootstrap": "lerna bootstrap && yarn run build",
    "build": "lerna run build",
    "publish": "yarn run build-storybook && yarn run lerna-publish",
    "create-module": "./create-module.sh",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "lerna-publish": "lerna publish --exact --skip-npm --conventional-commits",
    "build-storybook": "build-storybook -c .storybook -o docs",
    "lint": "tslint --project tsconfig.json",
    "format:prettier": "prettier \"**/*.{js,jsx,json,ts,tsx,md}\" --write",
    "format:tslint": "tslint --project tsconfig.json --fix",
    "format": "yarn format:prettier && yarn format:tslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "printWidth": 100,
    "semi": false
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --write", "tslint --project tsconfig.json --fix", "git add"],
    "*.{js,jsx}": ["prettier --write", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "workspaces": ["modules/*"]
}
